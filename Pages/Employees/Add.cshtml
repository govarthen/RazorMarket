@page
@model RazorMarket.Pages.Employees.AddModel
@{
    var msg = ViewData["Message"]?.ToString();
}

<form method="post">

    <h1 class="mb-3"> Add NEW Employee </h1>

    @if(!string.IsNullOrEmpty(msg))
    {
        <div class="alert alert-success" role="alert">
            @msg
        </div>
    }

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="AddEmployeeRequest.Name" />
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="AddEmployeeRequest.Email"/>
    </div>

    <div class="mb-3">
        <label class="form-label">Salary</label>
        <input type="number" class="form-control" asp-for="AddEmployeeRequest.Salary" />
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>
